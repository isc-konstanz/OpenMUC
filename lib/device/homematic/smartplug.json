{
    "name": "Smart Plug",
    "category": "Energy meters",
    "group": "eQ-3 Homematic",
    "description": "",
    
    "prefix": "name",
    
    "devices": [
        {
            "driver": "homematic",
            "description": "eQ-3 Homematic Smart Plug"
        }
    ],
    
    "options": [
        {
            "id": "address",
            "name": "Address",
            "description": "Address of the Homematic Device",
            "type": "text",
            "mandatory": true,
            "syntax": "deviceAddress"
        },
        {
            "id": "deviceType",
            "name": "Type",
            "description": "Type of the Homematic Device",
            "type": "selection",
            "select": [
                { "name": "HM-ES-PMSw1-Pl", "value": "00AC" },
                { "name": "HM-ES-PMSw1-Pl-DN-R1", "value": "00D7" },
                { "name": "HM-ES-PMSw1-Pl-DN-R3", "value": "00E3" },
                { "name": "HM-ES-PMSw1-Pl-DN-R4", "value": "00E4" },
                { "name": "HM-ES-PMSw1-Pl-DN-R5", "value": "00E5" }
            ],
            "mandatory": true,
            "syntax": "deviceSettings"
        }
    ],
    
    "items": [
        {
            "id": "state",
            "type": "Switch",
            "label": "Plug State",
            "mapping": {
                "ON": { "channel": "plug_control", "value": true },
                "OFF": { "channel": "plug_control", "value": false }
            },
            "input": "plug_state"
        }
    ],
    
    "channels": [
        {
            "name": "plug_control",
            "description": "Plug Control",
            "address": "01",
            "settings": "channelType=COMMAND",
            "configs": {"valueType":"BOOLEAN"}
        },
        {
            "name": "plug_state",
            "description": "Plug State",
            "address": "0001",
            "settings": "channelType=ATTRIBUTE",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 5000, "valueType":"BOOLEAN"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "plug_state"}
                }
            ]
        },
        {
            "name": "plug_current",
            "description": "Plug Current",
            "address": "0002",
            "settings": "channelType=ATTRIBUTE",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 5000, "valueType":"FLOAT"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "plug_current"}
                }
            ]
        },
        {
            "name": "plug_voltage",
            "description": "Plug Voltage",
            "address": "0003",
            "settings": "channelType=ATTRIBUTE",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 5000, "valueType":"FLOAT"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "plug_voltage"}
                }
            ]
        },
        {
            "name": "plug_power",
            "description": "Plug Power",
            "address": "0004",
            "settings": "channelType=ATTRIBUTE",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 5000, "valueType":"FLOAT"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "plug_power"}
                }
            ]
        },
        {
            "name": "plug_frequency",
            "description": "Plug Frequency",
            "address": "0005",
            "settings": "channelType=ATTRIBUTE",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 5000, "valueType":"FLOAT"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "plug_frequency"}
                }
            ]
        },
        {
            "name": "plug_energy",
            "description": "Plug Energy",
            "address": "0006",
            "settings": "channelType=ATTRIBUTE",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 180000},
            "configs": {"samplingInterval": 5000, "valueType":"FLOAT"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "plug_energy"}
                }
            ]
        }
    ],
    
    "feeds": [
        {
            "name": "plug_state",
            "tag": "State",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        },
        {
            "name": "plug_current",
            "tag": "Current",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        },
        {
            "name": "plug_voltage",
            "tag": "Voltage",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        },
        {
            "name": "plug_power",
            "tag": "Power",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        },
        {
            "name": "plug_frequency",
            "tag": "Frequency",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        },
        {
            "name": "plug_energy",
            "tag": "Energy",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPTIMESERIES"
        }
    ],
    
    "syntax": {
        "deviceAddress": {
            "keyValue": false,
            "separator": ";"
        },
        "deviceSettings": {
            "keyValue": true,
            "assignment": "=",
            "separator": ";"
        }
    }
}