<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
  <option id="samplingTimeout">
    <name>Sampling timeout</name>
    <description>
      Time waited for a read operation to complete. Overwrites the sampling timeout of its Driver.
    </description>
    <mandatory>false</mandatory>
    <type>INTEGER</type>
    <default>0</default>
    <selection>
      <validate>false</validate>
      <item value="0">None</item>
      <item value="100">100 milliseconds</item>
      <item value="200">200 milliseconds</item>
      <item value="500">500 milliseconds</item>
      <item value="1000">1 second</item>
      <item value="2000">2 second</item>
      <item value="5000">5 seconds</item>
      <item value="10000">10 seconds</item>
      <item value="15000">15 seconds</item>
      <item value="30000">30 seconds</item>
      <item value="45000">45 seconds</item>
      <item value="60000">1 minute</item>
      <item value="120000">2 minutes</item>
      <item value="300000">5 minutes</item>
      <item value="600000">10 minutes</item>
      <item value="900000">15 minutes</item>
      <item value="1800000">30 minutes</item>
      <item value="2700000">45 minutes</item>
      <item value="3600000">1 hour</item>
      <item value="86400000">1 day</item>
    </selection>
  </option>
  <option id="connectRetryInterval">
    <name>Connect retry interval</name>
    <description>
      Time waited until a failed connection attempt is repeated. Overwrites the connect retry interval of its Driver.
    </description>
    <mandatory>false</mandatory>
    <type>INTEGER</type>
    <default>60000</default>
    <selection>
      <validate>false</validate>
      <item value="0">None</item>
      <item value="100">100 milliseconds</item>
      <item value="200">200 milliseconds</item>
      <item value="500">500 milliseconds</item>
      <item value="1000">1 second</item>
      <item value="2000">2 second</item>
      <item value="5000">5 seconds</item>
      <item value="10000">10 seconds</item>
      <item value="15000">15 seconds</item>
      <item value="30000">30 seconds</item>
      <item value="45000">45 seconds</item>
      <item value="60000">1 minute</item>
      <item value="120000">2 minutes</item>
      <item value="300000">5 minutes</item>
      <item value="600000">10 minutes</item>
      <item value="900000">15 minutes</item>
      <item value="1800000">30 minutes</item>
      <item value="2700000">45 minutes</item>
      <item value="3600000">1 hour</item>
      <item value="86400000">1 day</item>
    </selection>
  </option>
</configuration>
