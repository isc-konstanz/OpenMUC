{
    "name": "Pin 2 (GPIO2)",
    "category": "Raspberry Pi",
    "group": "GPIO",
    "description": "Configuration for a Raspberry Pi pin, either as input or output.",
    
    "prefix": "name",
    
    "device": {
        "driver": "rpi-gpio",
        "description": "Raspberry Pi GPIO2",
        "address": "pin:2"
    },
    
    "options": [
        {
            "id": "type",
            "name": "Type",
            "description": "Configure input/output",
            "type": "selection",
            "select": [
                { "name": "Input", "value": "input" },
                { "name": "Output", "value": "output" }
            ],
            "mandatory": true,
            "syntax": "deviceSettings"
        }
    ],
    
    "items": [
        {
            "id": "state",
            "type": "Switch",
            "label": "Pin state",
            "mapping": {
                "ON": { "channel": "pin2_state", "value": "true" },
                "OFF": { "channel": "pin2_state", "value": "false" }
            },
            "input": "pin2_state"
        }
    ],

    "channels": [
        {
            "name": "pin2_state",
            "description": "GPIO2 Pin state",
            "configs": {"valueType":"BOOLEAN", "samplingInterval": "2000", "loggingInterval": "2000"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "pin2_state"}
                }
            ]
        }
    ],
    
    "feeds": [
        {
            "name": "pin2_state",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPFINA",
            "interval": "10"
        }
    ],
    
    "syntax": {
        "deviceSettings": {
            "keyValue": true,
            "assignment": ":",
            "separator": ","
        }
    }
}