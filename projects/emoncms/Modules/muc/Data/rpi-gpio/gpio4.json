{
    "name": "GPIO 4 (Pin4)",
    "category": "Raspberry Pi",
    "group": "GPIO",
    "description": "Configuration for a Raspberry Pi pin, either as input or output.",
    
    "devices": [
        {
            "driver": "rpi-gpio",
            "description": "Raspberry Pi GPIO 4",
            "address": "pin:4"
        }
    ],
    
    "options": [
        {
            "id": "type",
            "name": "Type",
            "description": "Configure input/output",
            "type": "selection",
            "select": [
                { "name": "Input", "value": "input" },
                { "name": "Output", "value": "output" }
            ],
            "mandatory": true,
            "syntax": "deviceSettings"
        }
    ],
    
    "items": [
        {
            "id": "state",
            "type": "Switch",
            "label": "Pin state",
            "mapping": {
                "ON": { "channel": "gpio4_state", "value": true },
                "OFF": { "channel": "gpio4_state", "value": false }
            },
            "input": "gpio4_state"
        }
    ],
    
    "channels": [
        {
            "name": "gpio4_state",
            "description": "GPIO 4 Pin state",
            "logging": {"loggingInterval": 5000, "loggingMaxInterval": 60000},
            "configs": {"samplingInterval": 5000, "valueType":"BOOLEAN"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "gpio4_state"}
                }
            ]
        }
    ],
    
    "feeds": [
        {
            "name": "gpio4_state",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPFINA",
            "interval": "60"
        }
    ],
    
    "syntax": {
        "deviceSettings": {
            "keyValue": true,
            "assignment": ":",
            "separator": ","
        }
    }
}