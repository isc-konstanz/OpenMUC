{
    "name": "Pin 0 (GPIO0)",
    "category": "Raspberry Pi",
    "group": "GPIO",
    "description": "Configuration for a Raspberry Pi pin, either as input or output.",
    
    "prefix": "name",
    
    "devices": [
        {
            "driver": "rpi-gpio",
            "description": "Raspberry Pi GPIO0",
            "address": "pin:0"
        }
    ],
    
    "options": [
        {
            "id": "type",
            "name": "Type",
            "description": "Configure input/output",
            "type": "selection",
            "select": [
                { "name": "Input", "value": "input" },
                { "name": "Output", "value": "output" }
            ],
            "mandatory": true,
            "syntax": "deviceSettings"
        }
    ],
    
    "items": [
        {
            "id": "state",
            "type": "Switch",
            "label": "Pin state",
            "mapping": {
                "ON": { "channel": "pin0_state", "value": "true" },
                "OFF": { "channel": "pin0_state", "value": "false" }
            },
            "input": "pin0_state"
        }
    ],

    "channels": [
        {
            "name": "pin0_state",
            "description": "GPIO0 Pin state",
			"logging": {"loggingInterval": "2000"},
            "configs": {"samplingInterval": "2000", "valueType":"BOOLEAN"},
            "processList": [
                {
                    "process": "log_to_feed",
                    "arguments": {"type": "ProcessArg::FEEDID", "value": "pin0_state"}
                }
            ]
        }
    ],
    
    "feeds": [
        {
            "name": "pin0_state",
            "type": "DataType::REALTIME",
            "engine": "Engine::PHPFINA",
            "interval": "10"
        }
    ],
    
    "syntax": {
        "deviceSettings": {
            "keyValue": true,
            "assignment": ":",
            "separator": ","
        }
    }
}