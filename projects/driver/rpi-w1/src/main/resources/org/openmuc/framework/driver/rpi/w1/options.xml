<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
  <driver id="rpi-w1">
    <name>1-Wire (Raspberry Pi)</name>
    <description><![CDATA[
        The 1-Wire Driver enables the access to 1-Wire devices, connected to the Raspberry Pi platform.
      ]]>
    </description>
    
    <deviceAddress>
      <option id="id">
        <name>Device ID</name>
        <description><![CDATA[
            The device ID, retrievable through scanning.
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>String</type>
      </option>
    </deviceAddress>
    
    <deviceSettings>
      <option id="type">
        <name>Device type</name>
        <description><![CDATA[
            The type of the 1-Wire device, e.g. a temperature or humidity sensor.
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>STRING</type>
        <selection>
          <item value="TemperatureSensor">Temperature sensor</item>
        </selection>
      </option>
    </deviceSettings>
    
    <deviceScanSettings>
      <option id="ignore">
        <name>Ignore existing</name>
        <description><![CDATA[
            Ignore already configured devices and only list possible new connections.
          ]]>
        </description>
        <mandatory>false</mandatory>
        <default>true</default>
        <type>BOOLEAN</type>
      </option>
    </deviceScanSettings>
    
    <channelSettings>
      <option id="unit">
        <name>Unit</name>
        <description><![CDATA[
            The unit of the value, read from e.g. a 1-Wire temperature sensor.
          ]]>
        </description>
        <mandatory>false</mandatory>
        <type>STRING</type>
        <selection>
          <item value="CELSIUS">Celsius</item>
          <item value="KELVIN">Kelvin</item>
          <item value="FARENHEIT">Farenheit</item>
          <item value="RANKINE">Rankine</item>
        </selection>
        <default>CELSIUS</default>
      </option>
    </channelSettings>
  </driver>
</configuration>
